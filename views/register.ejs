<%- include('./layouts/header') %>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-success">
                        <h3 class="text-light">Add new user</h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/auth/register" method="post" enctype="multipart/form-data">
                            <!-- enctype="multipart/form-data" is needed for uploading files -->
                            <h6 class="h6 text-danger fw-bolder"><span>* Required to fill</span></h6>

                            <!-- input field for name -->
                            <div class="mb-2">
                                <label for="name" class="form-label">Full name <b class="text-danger">*</b></label>
                                <input type="text" name="name" class="form-control" id="name" placeholder="Enter full name" required />
                            </div>

                            <!-- input fields for age and dob -->
                            <div class="mb-2">
                                <div class="row">
                                    <div class="col">
                                        <label for="age" class="form-label">Age <b class="text-danger">*</b></label>
                                        <input type="text" name="age" class="form-control" id="age" placeholder="Enter age" required />
                                    </div>
                                    <div class="col">
                                        <label for="dob" class="form-label">Birthday <b class="text-danger">*</b></label>
                                        <input type="date" name="dob" class="form-control" id="dob" required />
                                    </div>
                                </div>
                            </div>

                            <!-- input field for role and gender -->
                            <div class="mb-2">
                                <div class="row">
                                    <div class="col">
                                        <label for="role" class="form-label">Role <b class="text-danger">*</b> </label>
                                        <select name="role" id="role" class="form-select" required>
                    <option disabled selected>-- Select an option --</option>
                    <option value="STUDENT">Student</option>
                    <option value="ACADEME">Academe</option>
                    <option value="ADMIN">Admin</option>
                  </select>
                                    </div>
                                    <div class="col">
                                        <label for="gender" class="form-label">Gender <b class="text-danger">*</b> </label>
                                        <select name="gender" id="gender" class="form-select" required>
                    <option disabled selected>-- Select an option --</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                  </select>
                                    </div>
                                </div>
                            </div>

                            <!-- input fields for username and password -->
                            <div class="mb-2">
                                <div class="row">
                                    <div class="col">
                                        <label for="username" class="form-label">User ID <b class="text-danger">*</b></label>
                                        <input type="text" name="username" class="form-control" id="username" placeholder="Enter a User ID" required />
                                    </div>
                                    <div class="col">
                                        <label for="password" class="form-label">Password <b class="text-danger">*</b></label>
                                        <input type="text" name="password" class="form-control" id="password" placeholder="Enter a User ID" required />
                                    </div>
                                </div>
                            </div>

                            <hr class="text-danger" />
                            <!-- input fields for grlvl and section -->
                            <p class="h4">For Student and Academe</p>
                            <div class="mb-2">
                                <div class="row">
                                    <div class="col">
                                        <label for="grlvl" class="form-label">Grade / Level</label>
                                        <select name="grlvl" id="grlvl" class="form-select">
                    <option disabled selected>-- Select an option --</option>
                    <option value="Prep">Prep</option>
                    <option value="Kinder">Kinder</option>
                  </select>
                                    </div>
                                    <div class="col">
                                        <label for="section" class="form-label">Section</label>
                                        <select name="section" id="section" class="form-select">
                    <option disabled selected>-- Select an option --</option>
                    <option value="Joyful">Joyful (Prep)</option>
                    <option value="Cheerful">Cheerful (Kinder)</option>
                  </select>
                                    </div>
                                </div>
                            </div>

                            <!-- input fields for studnum and mobile -->
                            <div class="mb-2">
                                <div class="row">
                                    <div class="col">
                                        <label for="studnum" class="form-label">Student No.</label>
                                        <input type="text" name="studnum" class="form-control" id="studnum" placeholder="Enter a student number" />
                                    </div>
                                    <div class="col">
                                        <label for="mobile" class="form-label">Mobile No.</label>
                                        <input type="tel" name="mobile" class="form-control" id="mobile" placeholder="Enter a mobile number" />
                                    </div>
                                </div>
                            </div>

                            <!-- input field for subjects -->
                            <div class="mb-0 d-block">
                                <div class="row-cols-5">
                                    <label for="subjects" class="form-label">Subjects</label>
                                    <select name="subjects" class="mb-3 form-control selectpicker w-75" id="subjects" multiple>
                  <option value="Filipino">Filipino</option>
                  <option value="English">English</option>
                  <option value="Math">Math</option>
                  <option value="Reading and Phonics">Reading and Phonics</option>
                </select>
                                </div>
                            </div>
                            <!-- ! The image is not saving to the database, need to fix it immediately or just remove it  -->
                            <div class="mb-3">
                                <label for="image" class="form-label">Select image <span class="text-danger">(Optional)</span></label>
                                <input type="file" name="image" id="image" class="form-control" />
                            </div>

                            <!-- submit button -->
                            <div class="mb-1 d-grid">
                                <input type="submit" value="Register" class="btn btn-success btn-lg" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('./layouts/footer') %>